---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<style>
  /* Animation styles */
  @keyframes slide-from-left-ani {
    0% {
      opacity: 0;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateX(0%);
      opacity: 1;
    }
  }

  @keyframes slide-from-right-ani {
    0% {
      opacity: 0;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateX(0%);
      opacity: 1;
    }
  }

  @keyframes slide-from-top-ani {
    0% {
      opacity: 0;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(0%);
      opacity: 1;
    }
  }

  .slide-from-left {
    animation: slide-from-left-ani 1.1s ease-out forwards;
    opacity: 0;
    transform: translateX(-15%);
  }

  .slide-from-right {
    animation: slide-from-right-ani 1.1s ease-out forwards;
    opacity: 0;
    transform: translateX(15%);
  }

  .slide-from-right-delay {
    animation: slide-from-right-ani 1.1s ease-out forwards;
    opacity: 0;
    transform: translateX(15%);
    animation-delay: 400ms;
  }

  .slide-from-top {
    animation: slide-from-top-ani 1.1s ease-in-out forwards;
    opacity: 0;
    transform: translateY(-15%);
    animation-delay: 400ms;
  }
  /* End animation styles */
</style>

<section
  id="hero"
  class="relative overflow-hidden bg-[#DED4C8] text-[#974319] px-4 md:px-[10rem] pt-12 pb-24"
>
  <img
    width="400"
    height="484"
    class="parallax-image z-0 hidden md:block img-fade-in absolute top-0 right-0 md:right-32 rounded-sm"
    src="/amy-vosters--Yxl9vDlnLM-unsplash.jpg"
    alt="wine"
  />

  <img
    width="250"
    height="191"
    class="parallax-image z-0 hidden md:block img-fade-in absolute bottom-10 right-0 md:right-32 rounded-sm"
    src="/pancake-1.jpeg"
    alt="desktop pancakes 1"
  />

  <img
    width="400"
    height="266.875"
    class="parallax-image hidden md:block z-0 img-fade-in absolute bottom-12 right-[30rem] rounded-sm"
    src="/avo-0.jpeg"
    alt="desktop avocado toast"
  />

  <img
    width="190"
    height="253"
    class="hidden md:block z-0 img-fade-in absolute bottom-40 left-0 rounded-sm"
    src="/hall-0.jpeg"
    alt="desktop image 0 of inside of restaurant"
  />

  <img
    width="300"
    height="363"
    class="z-0 block md:hidden img-fade-in absolute top-0 right-0 md:right-32 rounded-sm"
    src="/amy-vosters--Yxl9vDlnLM-unsplash.jpg"
    alt="mobile wine"
  />

  <img
    width="180"
    height="137"
    class="parallax-image z-0 block md:hidden img-fade-in absolute bottom-10 right-0 md:right-32 rounded-sm"
    src="/pancake-1.jpeg"
    alt="mobile pancakes 1"
  />

  <img
    width="180"
    height="240"
    class="parallax-image z-0 block md:hidden img-fade-in absolute bottom-20 left-[0%] rounded-sm"
    src="/hall-0.jpeg"
    alt="mobile image 0 of inside of restaurant"
  />

  <div class="z-10 flex flex-col text-center md:text-left gap-6">
    <div class="flex flex-col hover:text-gray-600 slide-from-left w-full">
      <div class="font-mantra text-7xl md:text-8xl">Brunch</div>
      <span class="hidden md:block text-xs">{t("hero.brunchdescrip")}</span>
    </div>
    <div class="z-10 flex flex-row gap-2 hover:text-gray-600 w-full">
      <div class="md:w-16"></div>
      <div class="font-mantra text-7xl md:text-8xl slide-from-right">
        {t("hero.coffee")}
      </div>
      <span
        class="hidden md:block text-xs slide-from-right-delay whitespace-nowrap"
        >{t("hero.coffeedescrip")}</span
      >
    </div>
    <div class="z-10 relative hover:text-gray-600 w-full">
      <span
        class="hidden md:block absolute writing-lr rotate-180 text-xs whitespace-nowrap bottom-8 left-[2.35rem] slide-from-top"
        >{t("hero.lunchdescrip")}</span
      >
      <div class="font-mantra text-7xl md:text-8xl slide-from-right">Lunch</div>
    </div>
    <div
      class="z-10 flex flex-row items-center gap-2 hover:text-gray-600 slide-from-left mx-auto md:mx-0 w-full"
    >
      <span class="hidden md:block writing-lr rotate-180 text-xs"
        >{t("hero.winedescrip")}</span
      >
      <div class="font-mantra text-7xl md:text-8xl">{t("hero.wine")}</div>
    </div>
    <div class="z-10 flex flex-row gap-2 hover:text-gray-600 w-full">
      <div class="font-mantra text-7xl md:text-8xl slide-from-right">
        Snacks
      </div>
      <span class="hidden md:block text-xs slide-from-top whitespace-nowrap"
        >{t("hero.snacksdescrip")}</span
      >
    </div>
  </div>
</section>
