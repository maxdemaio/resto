---
import { Image } from "astro:assets";
import winePic from "../../public/amy-vosters--Yxl9vDlnLM-unsplash.jpg";
import pancake1 from "../../public/pancake-1.jpeg";
import avo0 from "../../public/avo-0.jpeg";
import hall0 from "../../public/hall-0.jpeg";
---

<style>
  /* Animation styles */
  @keyframes slide-from-left-ani {
    0% {
      opacity: 0;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateX(0%);
      opacity: 1;
    }
  }

  @keyframes slide-from-right-ani {
    0% {
      opacity: 0;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateX(0%);
      opacity: 1;
    }
  }

  @keyframes slide-from-top-ani {
    0% {
      opacity: 0;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(0%);
      opacity: 1;
    }
  }

  .slide-from-left {
    animation: slide-from-left-ani 1.1s ease-out forwards;
    opacity: 0;
    transform: translateX(-15%);
  }

  .slide-from-right {
    animation: slide-from-right-ani 1.1s ease-out forwards;
    opacity: 0;
    transform: translateX(15%);
  }

  .slide-from-right-delay {
    animation: slide-from-right-ani 1.1s ease-out forwards;
    opacity: 0;
    transform: translateX(15%);
    animation-delay: 400ms;
  }

  .slide-from-top {
    animation: slide-from-top-ani 1.1s ease-in-out forwards;
    opacity: 0;
    transform: translateY(-15%);
    animation-delay: 400ms;
  }
  /* End animation styles */
</style>

<section
  id="hero"
  class="relative overflow-hidden bg-[#DED4C8] text-[#AE4E1E] px-4 md:px-[10rem] pt-12 pb-24"
>
  <Image
    width={400}
    height={484.3}
    class="hidden md:block img-fade-in absolute top-0 right-0 md:right-32 rounded-sm"
    src={winePic}
    alt="wine"
  />

  <Image
    width={250}
    height={190.75}
    class="hidden md:block img-fade-in absolute top-[72%] right-0 md:right-32 rounded-sm"
    src={pancake1}
    alt="pancakes 1"
  />

  <Image
    width={400}
    height={305.6}
    class="hidden md:block z-0 img-fade-in absolute top-[60%] right-96 rounded-sm"
    src={avo0}
    alt="avocado toast"
  />

  <Image
    width={190}
    height={256}
    class="hidden md:block z-0 img-fade-in absolute top-[72%] left-[0%] rounded-sm"
    src={hall0}
    alt="image 0 of inside of restaurant"
  />

  <Image
    width={300}
    height={363.225}
    class="block md:hidden img-fade-in absolute top-0 right-0 md:right-32 rounded-sm"
    src={winePic}
    alt="mobile wine"
  />

  <Image
    width={180}
    height={182.16}
    class="block md:hidden img-fade-in absolute top-[72%] right-0 md:right-32 rounded-sm"
    src={pancake1}
    alt="mobile pancakes 1"
  />

  <Image
    width={180}
    height={255.789}
    class="block md:hidden img-fade-in absolute top-[72%] left-[0%] rounded-sm"
    src={hall0}
    alt="mobile image 0 of inside of restaurant"
  />

  <div class="z-10 flex flex-col text-center md:text-left gap-6">
    <div class="flex flex-col hover:text-gray-600 slide-from-left w-full">
      <div class="font-mantra text-7xl md:text-8xl">Brunch</div>
      <span class="hidden md:block text-xs">from 10am to 4pm</span>
    </div>
    <div class="z-10 flex flex-row gap-2 hover:text-gray-600 w-full">
      <div class="md:w-16"></div>
      <div class="font-mantra text-7xl md:text-8xl slide-from-right">
        Coffee
      </div>
      <span
        class="hidden md:block text-xs slide-from-right-delay whitespace-nowrap"
        >for here or to go</span
      >
    </div>
    <div class="z-10 relative hover:text-gray-600 w-full">
      <span
        class="hidden md:block absolute writing-lr rotate-180 text-xs whitespace-nowrap bottom-8 left-[2.35rem] slide-from-top"
        >business or boozy</span
      >
      <div class="font-mantra text-7xl md:text-8xl slide-from-right">Lunch</div>
    </div>
    <div
      class="z-10 flex flex-row items-center gap-2 hover:text-gray-600 slide-from-left mx-auto md:mx-0 w-full"
    >
      <span class="hidden md:block writing-lr rotate-180 text-xs"
        >many by the glass</span
      >
      <div class="font-mantra text-7xl md:text-8xl">Natural wines</div>
    </div>
    <div class="z-10 flex flex-row gap-2 hover:text-gray-600 w-full">
      <div class="font-mantra text-7xl md:text-8xl slide-from-right">
        Snacks
      </div>
      <span class="hidden md:block text-xs slide-from-top whitespace-nowrap"
        >all day long</span
      >
    </div>
  </div>
</section>
