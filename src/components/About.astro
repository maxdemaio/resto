---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

import { Image } from "astro:assets";
import hall1 from "../../public/hall-1.jpeg";
import pasta0 from "../../public/pasta-0.jpeg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<style>
  .inherit {
    position: inherit;
  }
</style>
<section
  id="about-resto"
  class="flex justify-center relative bg-[#974319] text-white px-3 md:px-[10rem] py-20"
>
  <Image
    width={300}
    height={400}
    class="hidden md:block left-0 top-[30%] img-fade-in absolute rounded-sm"
    src={hall1}
    alt="hall picture 1"
    quality="high"
    format="jpeg"
  />
  <Image
    width={300}
    height={236}
    class="hidden md:block right-0 md:right-24 top-[30%] img-fade-in absolute rounded-sm"
    src={pasta0}
    alt="pasta picture"
    format="jpeg"
    quality="high"
  />
  <div class="inherit max-w-md lg:max-w-5xl">
    <h2 class="font-mantra text-5xl md:text-6xl mb-6 pb-8">{t("about.who")}</h2>
    <div class="text-lg mb-6">
      {t("about.whodescrip")}
    </div>

    <h2 class="font-mantra text-5xl md:text-6xl mb-6 pb-8">{t("about.owner")}</h2>
    <div class="text-lg mb-6">
      {t("about.ownerdescrip")}
    </div>
  </div>
</section>
