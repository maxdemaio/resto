---
import { Image } from "astro:assets";
import avoToast from "../../public/content-pixie-y6zQ3pP9dss-unsplash.jpg";
import chickenSam from "../../public/yalamber-limbu-UyJee3dGNn0-unsplash.jpg";
---

<section id="contact" class="relative z-20 bg-[#61614F] text-white px-10 py-20">
  <div class="flex flex-col gap-4 md:hidden">
    <div class="flex flex-col items-center">
      <h2 class="font-mantra text-5xl md:text-6xl mb-6 pb-8">Contact Us</h2>
      <a href="#" class="mb-1 py-2 strike">info@dandymtl.com</a>
      <p class="mb-1 py-2">123-456-7890</p>
      <p class="my-2 w-8 border-[1.08px] border-b border-b-white"></p>
      <p class="mb-1 py-2">No reservations</p>
      <p class="py-2">123 Rue Resto, Montréal, QC</p>
    </div>
    <div class="flex justify-around flex-wrap gap-4">
      <Image
        class="col-span-2 z-0 img-fade-in rounded-sm"
        width={200}
        src={avoToast}
        alt="avo-toast picture"
      />
      <Image
        class="col-span-2 z-0 img-fade-in rounded-sm"
        width={200}
        src={chickenSam}
        alt="chicken sandwich picture"
      />
    </div>
  </div>

  <div class="hidden md:flex md:items-start justify-around">
    <Image
      class="z-0 img-fade-in rounded-sm"
      width={200}
      src={avoToast}
      alt="avo-toast picture"
    />
    <div class="flex flex-col items-center">
      <h2 class="font-mantra text-5xl md:text-6xl mb-6 pb-8">Contact Us</h2>
      <a href="#" class="mb-1 py-2 strike">info@dandymtl.com</a>
      <p class="mb-1 py-2">123-456-7890</p>
      <p class="my-2 w-8 border-[1.08px] border-b border-b-white"></p>
      <p class="mb-1 py-2">No reservations</p>
      <p class="py-2">123 Rue Resto, Montréal, QC</p>
    </div>
    <Image
      class="z-0 img-fade-in rounded-sm"
      width={200}
      src={chickenSam}
      alt="chicken sandwich picture"
    />
  </div>
</section>
