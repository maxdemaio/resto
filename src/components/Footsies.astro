---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative z-20 bg-[#974319] px-10 py-20 text-white">
  <footer class="hidden md:block">
    <div class="flex items-center gap-4 mb-6 pb-8">
      <h2 class="font-mantra text-5xl md:text-6xl relative">Resto</h2>
      <div class="w-full h-[2px] bg-white"></div>
    </div>
    <div class="flex justify-between flex-col md:flex-row">
      <div>
        <h3 class="font-mantra text-xl md:text-3xl mb-4">Info</h3>
        <a class="inline-flex strike mb-1 py-2" href="#menus">Menus</a>
        <br />
        <a class="py-2 inline-flex strike" href="#about-resto">{t("footer.about")}</a>
      </div>
      <div>
        <h3 class="font-mantra text-xl md:text-3xl mb-4">Contact</h3>
        <a href="#" class="inline-flex strike mb-1 py-2">info@resto.com</a>
        <br />
        <p class="mb-1 py-2">123-456-7890</p>
        <p class="mb-1 py-2">123 Rue Resto, Montréal, QC</p>
        <a href="#" class="inline-flex strike mb-1 py-2">Instagram</a>
        <br />
        <a href="#" class="inline-flex strike py-2">Facebook</a>
      </div>
      <div>
        <h3 class="font-mantra text-xl md:text-3xl mb-4">{t("footer.hoursheader")}</h3>
        <p class="mb-1 py-2">{t("footer.days")}</p>
        <p class="py-2">{t("footer.hours")}</p>
      </div>
    </div>
  </footer>

  <footer class="visible md:hidden">
    <div class="flex flex-col items-center gap-2">
      <h2 class="font-mantra text-5xl md:text-6xl p-2 mb-6 pb-8">Resto</h2>
      <a class="inline-flex strike" href="#about-resto">{t("footer.about")}</a>
      <a class="inline-flex strike py-2" href="#menus-dropdown">Menus</a>
      <a class="inline-flex strike py-2" href="#contact">Contact</a>
      <div class="my-2 w-8 border-[1.08px] border-b border-b-white"></div>
      <p class="py-2">123-456-7890</p>
      <p>123 Rue Resto, Montréal, QC</p>
      <a href="#" class="inline-flex strike py-2">Instagram</a>
      <a href="#" class="inline-flex strike py-2">Facebook</a>
      <div class="my-2 w-8 border-[1.08px] border-b border-b-white"></div>
      <p class="text-center py-2">{t("footer.days")}</p>
      <p>{t("footer.hours")}</p>
    </div>
  </footer>
</section>
